{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the weather plugin"
    },
    "api_key": {
      "type": "string",
      "default": "YOUR_OPENWEATHERMAP_API_KEY",
      "description": "OpenWeatherMap API key (required)"
    },
    "update_interval": {
      "type": "number",
      "default": 1800,
      "minimum": 300,
      "description": "Update interval in seconds (minimum 5 minutes to respect API limits)"
    },
    "units": {
      "type": "string",
      "enum": ["imperial", "metric"],
      "default": "imperial",
      "description": "Temperature units (imperial = Fahrenheit, metric = Celsius)"
    },
    "display_format": {
      "type": "string",
      "default": "{temp}Â°F\\n{condition}",
      "description": "Display format for current weather (supports {temp}, {condition}, {humidity}, {wind})"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string",
          "default": "Dallas",
          "description": "City name"
        },
        "state": {
          "type": "string",
          "default": "Texas",
          "description": "State/province name"
        },
        "country": {
          "type": "string",
          "default": "US",
          "description": "Country code (e.g., US, GB, CA)"
        }
      },
      "required": ["city", "country"]
    },
    "display_modes": {
      "type": "object",
      "properties": {
        "weather": {
          "type": "boolean",
          "default": true,
          "description": "Show current weather conditions"
        },
        "hourly_forecast": {
          "type": "boolean",
          "default": true,
          "description": "Show hourly forecast"
        },
        "daily_forecast": {
          "type": "boolean",
          "default": true,
          "description": "Show daily forecast"
        }
      }
    },
    "display_duration": {
      "type": "number",
      "default": 30,
      "minimum": 5,
      "description": "How long to display each weather mode in seconds"
    }
  },
  "required": ["enabled", "api_key", "location"]
}

