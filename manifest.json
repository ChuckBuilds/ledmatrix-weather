{
  "id": "weather",
  "name": "Weather Display",
  "version": "1.0.0",
  "author": "ChuckBuilds",
  "description": "Comprehensive weather display with current conditions, hourly forecast, daily forecast, and UV index. Powered by OpenWeatherMap API with beautiful weather icons.",
  "homepage": "https://github.com/ChuckBuilds/ledmatrix-plugins",
  "entry_point": "manager.py",
  "class_name": "WeatherPlugin",
  "category": "weather",
  "tags": ["weather", "forecast", "temperature", "conditions", "openweathermap"],
  "icon": "fas fa-cloud-sun",
  "compatible_versions": [">=2.0.0"],
  "ledmatrix_version": "2.0.0",
  "requires": {
    "python": ">=3.9",
    "display_size": {
      "min_width": 64,
      "min_height": 32
    }
  },
  "config_schema": "config_schema.json",
  "assets": {},
  "update_interval": 1800,
  "default_duration": 30,
  "display_modes": ["weather", "hourly_forecast", "daily_forecast"],
  "api_requirements": [
    {
      "name": "OpenWeatherMap API",
      "required": true,
      "description": "API key for weather data from OpenWeatherMap",
      "url": "https://openweathermap.org/api"
    }
  ]
}

